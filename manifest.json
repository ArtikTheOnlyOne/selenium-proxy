{
	"version": "1.3.3.7",
	"manifest_version": 3,
	"name": "Selenium Proxy Extension",
	"short_name": "Selenium Proxy",
	"description": "This is a Chrome extension that lets you use HTTP, HTTPS and SOCKS proxy easily",
	"homepage_url": "https://github.com/ArtikTheOnlyOne/selenium-proxy",
	"permissions": [
		"proxy",
		"unlimitedStorage",
		"storage",
		"webRequest",
		"webRequestAuthProvider"
	],
	"background": {
		"service_worker": "scripts/background.js"
	},
	"host_permissions": [
		"<all_urls>"
	],
	"icons": {
		"16": "icons/selenium16.png",
		"32": "icons/selenium32.png",
		"48": "icons/selenium48.png",
		"128": "icons/selenium128.png"
	},
	"action": {
		"default_icon": "icons/selenium.png",
		"default_title": "Selenium Proxy Extension",
		"default_popup": "ui/settings.html"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["scripts/content-script.js"],
			"run_at": "document_start"
		}
	]
}